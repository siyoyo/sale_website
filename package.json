{
  "name": "eltc",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bulma": "^0.6.0",
    "moment": "^2.19.1",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.1",
    "progressbar.js": "^1.0.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-particles-js": "^2.0.0",
    "react-scripts": "1.0.14",
    "react-spinkit": "^3.0.0",
    "truffle-contract": "^3.0.0",
    "web3": "^0.20.2"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.4"
  },
  "scripts": {
    "build-css":
      "node-sass-chokidar --include-path ./src --include-path ./node_modules --include-path ./styles src/ -o src/",
    "build": "npm run build-css && react-scripts build",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "watch-css":
      "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules --include-path ./styles src/ -o src/ --watch --recursive"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ]
  }
}
